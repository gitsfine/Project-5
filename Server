import javax.swing.*;
import java.io.*;
import java.net.*;

public class Server {

    public static void main(String[] args) throws IOException {
        try {
            ServerSocket ss = new ServerSocket(4242);

            while (true) { //infinite loop for client connection

                Socket socket = ss.accept();  //server accept the client connection
                System.out.println("Connected successfully!");
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }

    class Threading extends Thread { //independent thread for client
        Socket socket;

        public void run() {
            try {
                DataInputStream inStream = new DataInputStream(socket.getInputStream());
                DataOutputStream outStream = new DataOutputStream(socket.getOutputStream());

                //code

                inStream.close();
                outStream.close();
                socket.close();
            } catch (Exception e) {
                e.printStackTrace();
            }
        }
    }
}
