import java.util.ArrayList;

public class Product {

    private String username;
    private String storeName;
    private String productName;
    private String coffeeType;
    private String milkType;
    private String syrup;
    private String special;
    private double price;
    private int quantity;

    public Product(String username, String storeName, String productName, String coffeeType,
                   String milkType, String syrup,
                   String special, double price, int quantity) {
        this.username = username;
        this.storeName = storeName;
        this.productName = productName;
        this.coffeeType = coffeeType;
        this.milkType = milkType;
        this.syrup = syrup;
        this.special = special;
        this.price = price;
        this.quantity = quantity;
    }


    //getters and setters... all of them lol
    public String getUsername() {
        return username;
    }

    public String getStoreName() {
        return storeName;
    }
    public String getProductName() {
        return productName;
    }

    public String getCoffeeType() {
        return coffeeType;
    }

    public String getMilkType() {
        return milkType;
    }

    public String getSyrup() {
        return syrup;
    }

    public String getSpecial() {
        return special;
    }

    public double getPrice() {
        return price;
    }

    public int getQuantity() {
        return quantity;
    }

    public void setUsername(String username) {
        this.username = username;
    }

    public void setStoreName(String storeName) {
        this.storeName = storeName;
    }

    public void setProductName(String productName) {
        this.productName = productName;
    }

    public void setCoffeeType(String coffeeType) {
        this.coffeeType = coffeeType;
    }

    public void setMilkType(String milkType) {
        this.milkType = milkType;
    }

    public void setSyrup(String syrup) {
        this.syrup = syrup;
    }

    public void setSpecial(String special) {
        this.special = special;
    }

    public void setPrice(double price) {
        this.price = price;
    }

    public void setQuantity(int quantity) {
        this.quantity = quantity;
    }

    public String toString() {
        return String.format("%s\nCoffee: %s | " +
                        "Milk Type: %s | Syrup: %s | Special: %s\n" +
                        "Price: %.2f | Quantity: %d",
                productName, coffeeType, milkType, syrup, special, price, quantity);
    }

    public String getDescription() { //description of product for other methods to call
        return String.format("Coffee: %s | Milk Type: %s | Syrup: %s | Special: %s\n", coffeeType, milkType, syrup, special);
    }

    public String dataTXTRepresentation() {
        return String.format("%s,%s,%s,%s,%s,%.2f,%d", getProductName(), getCoffeeType(), getMilkType(), getSyrup(), getSpecial(), getPrice(), getQuantity());
    }

    public void sell(int numberSold) {
        setQuantity(getQuantity() - numberSold);
    }
}
